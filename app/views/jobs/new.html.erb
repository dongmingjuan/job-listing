<div class="col-md4 col-md-offset-4">
  <h2>Add a Job</h2>
  <hr>
  <%= simple_form_for @job do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :wage_lower_bound, :label => "薪资下限"%>
    <%= f.input :wage_upper_bound, :label => "薪资上限"%>
    <%= f.input :contact_email %>
    <%= f.submit "Submit", class: "btn btn-primary btn-xs"%>
  <% end %>
</div>
